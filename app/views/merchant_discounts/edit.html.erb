<h2>Edit Discount #<%= @discount.id %></h2>
<div id='edit_form'>
    <%= form_with url: merchant_discount_path(@merchant, @discount), method: :patch, local: true do |f| %>
        <%= f.label :percentage_discount, "Percentage Discount:" %>
        <%= f.number_field :percentage_discount, value: @discount.percentage_discount %><br>
        <%= f.label :quantity_threshold, "Quantity Threshold:" %>
        <%= f.number_field :quantity_threshold, value: @discount.quantity_threshold %><br>
        <%= f.submit "Update Discount" %>
    <% end %>
</div>